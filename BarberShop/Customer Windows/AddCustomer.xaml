<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="BarberShop.AddCustomer"
        mc:Ignorable="d"
        Title="AddCustomer" Height="380" Width="275">
    <Grid>

        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="50,291,0,0" VerticalAlignment="Top" Click="AddButton_Click" RenderTransformOrigin="0.423,-1.389"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="146,291,0,0" VerticalAlignment="Top" Click="CancelButton_Click" />
        <TextBox x:Name="NameTextBox"
        materialDesign:HintAssist.Hint="Name"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
        VerticalAlignment="Center" Margin="50,39,47,267" Height="43" />
        <TextBox x:Name="AddressTextBox"
        materialDesign:HintAssist.Hint="Address"
        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
        VerticalAlignment="Center" Margin="50,87,47,219" Height="43" />

    </Grid>
</Window>
