<Window x:Class="BarberShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="479" Width="585">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="448" VerticalAlignment="Top" Width="577">
            <TabItem Header="New" FontSize="14">
                <Grid Background="#FFE5E5E5" Margin="0,2,0,-2">
                    <Label Content="Customer:" HorizontalAlignment="Left" Margin="60,60,0,0" VerticalAlignment="Top" Width="76" FontFamily="Roboto"/>
                    <Label Content="Date:" HorizontalAlignment="Left" Margin="60,120,0,0" VerticalAlignment="Top" FontFamily="Roboto"/>
                    <TextBox x:Name="TxtBoxCustomerNew" HorizontalAlignment="Left" Height="23" Margin="65,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontFamily="Roboto"/>
                    <Label Content="Haircut Type:" HorizontalAlignment="Left" Margin="60,181,0,0" VerticalAlignment="Top" Width="90" FontFamily="Roboto"/>
                    <Label Content="Price:" HorizontalAlignment="Left" Margin="60,241,0,0" VerticalAlignment="Top" FontFamily="Roboto"/>
                    <TextBox x:Name="TxtBoxPriceNew" HorizontalAlignment="Left" Height="23" Margin="65,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontFamily="Roboto"/>
                    <Button Content="Find" HorizontalAlignment="Left" Margin="160,60,0,0" VerticalAlignment="Top" Width="45"/>
                    <Button x:Name="NewCustomer1" Content="New" HorizontalAlignment="Left" Margin="209,60,0,0" VerticalAlignment="Top" Width="45" Click="NewCustomer_Click"/>
                    <Button x:Name="AddNew" Content="Add" HorizontalAlignment="Left" Margin="65,323,0,0" VerticalAlignment="Top" Width="75" Click="AddNew_Click"/>
                    <Button x:Name="ClearNew" Content="Clear All" HorizontalAlignment="Left" Margin="179,323,0,0" VerticalAlignment="Top" Width="75" Click="ClearNew_Click"/>
                    <DataGrid x:Name="TimeTableSmall" HorizontalAlignment="Left" Height="363" Margin="285,29,0,0" VerticalAlignment="Top" Width="276"/>
                    <DatePicker HorizontalAlignment="Left" Margin="65,145,0,0" VerticalAlignment="Top" Width="189">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                    <ComboBox x:Name="cmbBoxHaircut" HorizontalAlignment="Left" Margin="65,206,0,0" VerticalAlignment="Top" Width="189" SelectionChanged="cmbBoxHaircut_SelectionChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Order" FontSize="14">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Time Table" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="79" FontSize="14" Margin="0">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="TimeTable" HorizontalAlignment="Left" Height="417" VerticalAlignment="Top" Width="571"/>
                </Grid>
            </TabItem>
            <TabItem Header="Customer View" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="107" Margin="-2,0,0,0" FontSize="14">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="CustomersView" HorizontalAlignment="Left" Height="376" VerticalAlignment="Top" Width="571" Margin="0,41,0,0"/>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="97,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Search" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button x:Name="DelCustomerButton" Content="Delete" HorizontalAlignment="Left" Margin="486,10,0,0" VerticalAlignment="Top" Width="75" Click="DelCustomerButton_Click"/>
                    <Button x:Name="NewCustomer1_Copy" Content="New" HorizontalAlignment="Left" Margin="436,10,0,0" VerticalAlignment="Top" Width="45" Click="NewCustomer_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
