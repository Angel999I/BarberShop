<Window x:Class="BarberShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="MainWindow" Height="497" Width="710">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="466" VerticalAlignment="Top" Width="702" BorderBrush="White">
            <TabItem Header="New" FontSize="14" BorderBrush="White" Margin="0" Width="44">
                <Grid Background="White" Margin="0,2,0,-2">
                    <TextBox x:Name="TxtBoxPriceNew" materialDesign:HintAssist.Hint="Price"
                                Style="{StaticResource MaterialDesignFloatingHintTextBox}" HorizontalAlignment="Left" Height="37" Margin="44,237,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" FontFamily="Roboto"/>
                    <Button x:Name="AddNew" Content="Add" HorizontalAlignment="Left" Margin="44,308,0,0" VerticalAlignment="Top" Width="75" Click="AddNew_Click"/>
                    <Button x:Name="ClearNew" Content="Clear" HorizontalAlignment="Left" Margin="158,308,0,0" VerticalAlignment="Top" Width="75" Click="ClearNew_Click"/>
                    <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1" Margin="251,0,10,10">
                        <DataGrid x:Name="TimeTableSmall" IsReadOnly="True" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="405" Margin="9,9,0,0" VerticalAlignment="Top" Width="428" BorderBrush="#89000000">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Customer.name}" Header="Customer"/>
                                <DataGridTextColumn Binding="{Binding date, StringFormat=d}" Header="Date"/>
                                <DataGridTextColumn Binding="{Binding Haircut.name}" Header="Haircut"/>
                                <DataGridTextColumn Binding="{Binding price}" Header="Price"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>


                    <DatePicker x:Name="datePicker" materialDesign:HintAssist.Hint="Pick Date"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}" HorizontalAlignment="Left" Margin="44,130,0,0" VerticalAlignment="Top" Width="189">
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                    <ComboBox x:Name="cmbBoxHaircut" materialDesign:HintAssist.Hint="Haircut"
                      materialDesign:TextFieldAssist.HasClearButton="True"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      materialDesign:TextFieldAssist.SuffixText=""
                      materialDesign:HintAssist.HelperText="Select a haircut" HorizontalAlignment="Left" Margin="44,175,0,0" VerticalAlignment="Top" Width="189" SelectionChanged="cmbBoxHaircut_SelectionChanged"/>
                    <ComboBox x:Name="cmbBoxCustomer" materialDesign:HintAssist.Hint="Customer"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                        materialDesign:TextFieldAssist.SuffixText=""
                        materialDesign:HintAssist.HelperText="Select a customer" HorizontalAlignment="Left" Margin="44,73,0,0" VerticalAlignment="Top" Width="189" SelectionChanged="cmbBoxHaircut_SelectionChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="Order" FontSize="14" BorderBrush="White" Margin="0" Width="50" Height="23">
                <Grid Background="White"/>
            </TabItem>
            <TabItem Header="Time Table" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="82" FontSize="14" Margin="0,0,-3,0" BorderBrush="White">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="TimeTable" IsReadOnly="True" HorizontalAlignment="Left" Height="417" VerticalAlignment="Top" Width="571"/>
                </Grid>
            </TabItem>
            <TabItem Header="Customer View" HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="107" Margin="0" FontSize="14" BorderBrush="White">
                <Grid Background="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <DataGrid x:Name="CustomersView" HorizontalAlignment="Left" Height="376" AutoGenerateColumns="False" VerticalAlignment="Top" Width="571" Margin="0,41,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding name}" Header="Name"/>
                            <DataGridTextColumn Binding="{Binding address}" Header="Address"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox HorizontalAlignment="Left" Height="23" Margin="97,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                    <Button Content="Search" HorizontalAlignment="Left" Margin="10,4,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button x:Name="DelCustomerButton" Content="Delete" HorizontalAlignment="Left" Margin="486,5,0,0" VerticalAlignment="Top" Width="75" Click="DelCustomerButton_Click"/>
                    <Button x:Name="NewCustomer1_Copy" Content="New" HorizontalAlignment="Left" Margin="418,5,0,0" VerticalAlignment="Top" Width="63" Click="NewCustomer_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
