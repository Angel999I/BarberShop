<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarberShop"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="BarberShop.AddHaircut"
        mc:Ignorable="d"
        Title="AddHaircut" Height="380" Width="275" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="54,338,0,0" VerticalAlignment="Top" Click="AddButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="148,338,0,0" VerticalAlignment="Top" Click="CancelButton_Click" RenderTransformOrigin="0.561,0.516" />

        <TextBox x:Name="NameTextBox" materialDesign:HintAssist.Hint="Name" Margin="54,26,53,0" Width="168" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <TextBox x:Name="PriceTextBox" materialDesign:HintAssist.Hint="Price" Margin="54,71,53,0" Width="168" HorizontalAlignment="Center" VerticalAlignment="Top" />

    </Grid>
</Window>
